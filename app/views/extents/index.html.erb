<p id="notice"><%= notice %></p>

<h1>Extents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @extents.each do |extent| %>
      <tr>
        <td><%= extent.name %></td>
        <td><%= link_to 'Show', extent %></td>
        <td><%= link_to 'Edit', edit_extent_path(extent) %></td>
        <td><%= link_to 'Destroy', extent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Extent', new_extent_path %>
