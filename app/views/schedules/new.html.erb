<%= form_with url: schedules_path do %>
  <%= label_tag :need_time, '子供にかけたい時間：　例）１時間　→　01:00 (String型)' %>
  <%= time_select '', :need_time  %>

  <%= label_tag 'work[start_at]', '仕事が始まる時間：　例）7時　→ 07:00 (String型)' %>
  <%= time_select '', :work_start_at %>

  <%= label_tag 'work[finish_at]', '仕事が終わる時間：　例）17時　→ 17:00' %>
  <%= time_select '', :work_finish_at %>

  <%= label_tag :oneway_commute_time, '通勤時間：　例）20分　→　00:20 (String型)' %>
  <%= time_select '', :oneway_commute_time %>

  <%= label_tag :must_task, 'やらないといけない課題の名前：　例）テスト(String型)' %>
  <%= text_field_tag :must_task %>

  <%= submit_tag '送信する' %>
<% end %>
