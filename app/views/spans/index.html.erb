<p id="notice"><%= notice %></p>

<h1>Spans</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spans.each do |span| %>
      <tr>
        <td><%= span.name %></td>
        <td><%= link_to 'Show', span %></td>
        <td><%= link_to 'Edit', edit_span_path(span) %></td>
        <td><%= link_to 'Destroy', span, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Span', new_span_path %>
